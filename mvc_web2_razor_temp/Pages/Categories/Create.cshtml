@page
@model Book_web2_razor_temp.Pages.Categories.CreateModel


<form method="post" class="d-flex justify-content-center mt-5">
    <div class="border shadow-sm w-50 p-3 mt-4">
        <div class="row pb-2 ">
            <h2 class="text-primary">
                Create Category
            </h2>
        </div>
        <div class="mb-3 row  p-1">
            <label asp-for="Category.Name" class="p-0">Category's name</label>
            <input asp-for="Category.Name" class="form-control border-2" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1 ">
            <label asp-for="Category.DisPlayOrder" class="p-0">Display Order</label>
            <input asp-for="Category.DisPlayOrder" class="form-control border-2" />
            <span asp-validation-for="Category.DisPlayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-white border text-primary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}