@model Category


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3 ">
        <div class="row">
            <h2 class="text-white py-2 text-center">
                Delete Category
            </h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class=" p-2 ">
                @*  <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2  col-12">
                    <label asp-for="Name" disabled class="ms-2 small"></label>
                    <input asp-for="Name" class="form-control border-0 shadow mt-1" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="DisPlayOrder" disabled class="ms-2 small"></label>
                    <input asp-for="DisPlayOrder" class="form-control border-0 shadow mt-1" />               
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border text-white form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

